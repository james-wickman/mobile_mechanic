<%= form_for vehicle, :url => vehicles_update_path, :html => {:id => "edit_vehicle_form", :"data-parsley-validate" => ""}, method: :put do |f| %>
	<br>
  <div class="field">
    <%= f.hidden_field :id, value: vehicle.id %>
  </div>
  <div class="field">
    <%= f.label :make %> <br />
    <%= f.text_field :make, autofocus: true, class: 'form-control', "data-parsley-trigger" => "change", "data-parsley-minlength" => "2", required:"" %>
  </div><br>
  <div class="field">
    <%= f.label :model %> <br />
    <%= f.text_field :model, class: 'form-control', "data-parsley-trigger" => "change", "data-parsley-minlength" => "2", required:"" %>
  </div><br>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

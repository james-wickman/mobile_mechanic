<h2>Sign up Mech</h2>
<% resource_name = :mechanic %>
<% resource = Mechanic.new %>
<% devise_mapping = Devise.mappings[:mechanic] %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:id => "new_mechanic_form", :"data-parsley-validate" => ""}) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.text_field :first_name, autofocus: true,placeholder: "First Name", class: 'form-control', "data-parsley-trigger" => "change", "data-parsley-minlength" => "2", required:"" %>
  </div>
  <div class="field">
    <%= f.text_field :last_name,placeholder: "Last Name", class: 'form-control', "data-parsley-trigger" => "change", "data-parsley-minlength" => "2", required:"" %>
  </div>
  <div class="field">
    <div class="hidden" id="mechanic_loading">
      <div class="mechanic_check_animation loading"></div>
      <p class="mechanic_please_wait"> Please Wait</p>
    </div>
    <%= f.email_field :email,placeholder: "Email", id: 'mechanic_email', "data-parsley-remote" => "/home/unique_mechanic_email?email={value}", "data-parsley-remote-validator" => 'mechanic_email_unique', class: 'form-control email', "data-parsley-trigger" => "change", required:"" %>
  </div>
  <div class="field">
    <%= f.text_field :home_shop_address,placeholder: "Home Shop Address", class: 'form-control', "data-parsley-trigger" => "change", "data-parsley-minlength" => "3", required:"" %>
  </div>
  <div class="field">
    <%= f.text_field :city,placeholder: "City", class: 'form-control', "data-parsley-trigger" => "change", "data-parsley-minlength" => "3", required:"" %>
  </div>
  <div class="field">
    <%= f.text_field :state,placeholder: "State", class: 'form-control', "data-parsley-trigger" => "change", "data-parsley-minlength" => "2", required:"" %>
  </div>
  <div class="field">
    <%= f.text_field :zip,placeholder: "Zip Code", class: 'form-control', "data-parsley-trigger" => "change", "data-parsley-minlength" => "5", required:"" %>
  </div>

  <div class="field">
    <%= f.password_field :password,placeholder: "Password", autocomplete: "off", id: 'mechanic_signup_password', class: 'form-control', "data-parsley-trigger" => "change", "data-parsley-minlength" => "7", required:"" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation,placeholder: "Password Confirmation", autocomplete: "off", class: 'form-control', "data-parsley-trigger" => "change", "data-parsley-equalto" => "#mechanic_signup_password", 'data-required': "true" %>
  </div>


  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>



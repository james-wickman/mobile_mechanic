<%= form_tag'/mechanics/contact_customers', remote: true do |f| %>
	<%= hidden_field_tag :user_email, job.user.email  %>
	<%= hidden_field_tag :user_vehicle, job.vehicle.make + " " + job.vehicle.model %>
	<%= hidden_field_tag :appointment, job.appointment.date.localtime  %>
	<%= label_tag :subject %><span class="close_contact_user">X</span><br />
	<%= text_area_tag :subject,nil, size: "100x1", class: "subject_user_contact_form" %><br>
	<%= label_tag :message %><br />
	<%= text_area_tag :message,nil, size: "100x8", class: "message_user_contact_form" %><hr>
	<%= submit_tag "Send", class: "submit_user_contact_form" %>
	  
<% end %>
